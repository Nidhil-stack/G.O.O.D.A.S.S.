# GOODASS Settings File Example
# This file should be placed at ~/.config/goodass/settings.yaml
# All settings are optional unless otherwise noted

# ============================================================================
# SSH PRIVATE KEY (Required for initial setup)
# ============================================================================
# Path to the SSH private key used by GOODASS to connect to servers
# If not set during initial setup, a new keypair will be generated
ssh_private_key_path: ~/.ssh/id_rsa

# ============================================================================
# VERBOSITY LEVEL
# ============================================================================
# Controls the amount of output displayed
# 0 = Normal (default)
# 1 = Verbose
# 2 = Very verbose
# 3 = Debug
# 4 = Debug with stderr output (errors shown in terminal instead of log file)
verbosity: 0

# ============================================================================
# THREAD LIMITING
# ============================================================================
# Maximum number of concurrent SSH connections per host
# Helps prevent overwhelming servers with too many simultaneous connections
# Set to 0 or omit for no limit
max_threads_per_host: 5

# ============================================================================
# GPG HOME DIRECTORY (Optional)
# ============================================================================
# Path to the GPG home directory containing your GPG keys
# If not set, uses the system default (~/.gnupg)
# This is where your GPG private keys are stored for signing config files
gpg_home: ~/.gnupg

# ============================================================================
# MULTI-FILE CONFIGURATION (Optional)
# ============================================================================
# List of additional config files to manage
# Each file has a name (local display name) and path
# active: Whether the file is currently being used
config_files:
  - name: Production
    path: ~/configs/production-ssh-config.yaml
    active: true
  - name: Staging
    path: ~/configs/staging-ssh-config.yaml
    active: true
  - name: Development
    path: ~/configs/dev-ssh-config.yaml
    active: false

# List of currently selected (active) file names
selected_files:
  - Production
  - Staging

# ============================================================================
# SYNC SELECTION FOR NON-INTERACTIVE MODE (Optional)
# ============================================================================
# Which files to sync when running: goodass --fix-keys
# If empty or not set, uses the selected_files (active files)
# This allows you to have different active files for interactive use
# vs. what gets synced in automated/cron jobs
sync_selection:
  - Production
